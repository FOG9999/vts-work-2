@using Viettel.Domain.DomainModel
@using Viettel.Models.QLNH
@using System.Globalization;
@model NS_NguonNganSach

<div class="modal-body">
    <input type="hidden" id="iID_NguonNganSachModal" value="@Model.iID_MaNguonNganSach">
    <div class="form-group">
        <div class="form-group row">
            <div class="col-sm-6">
                <label for="txtsMaLoaiNguonNganSach">Mã nguồn ngân sách</label>
                @Helpers.Required()
                @{
                    if (Model.iID_MaNguonNganSach > 0)
                    {
                        <input type="text" id="txtsMaLoaiNguonNganSach" class="form-control" value="@Html.Raw(Html.Encode(Model.iID_MaNguonNganSach))" maxlength="50" readonly autocomplete="off" />
                    }
                    else
                    {
                        <input type="text" id="txtsMaLoaiNguonNganSach" class="form-control" value="" maxlength="50" autocomplete="off" />
                    }
                }
            </div>
            <div class="col-sm-6">
                <label for="txtsTenNguonNganSach">Tên nguồn ngân sách</label>
                @Helpers.Required()
                <input type="text" id="txtsTenNguonNganSach" class="form-control" value="@Html.Raw(Html.Encode(Model.sTen))" maxlength="50" autocomplete="off" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6">
                <label for="slbTrangThai">Trạng thái</label>
                @Html.DropDownList("slbTrangThai", new SelectList(ViewBag.ListTrangThai, "Value", "Text", Model.iTrangThai), new { @class = "form-control", @id = "slbTrangThai" })
            </div>
            <div class="col-sm-6">
                <label for="txtsSTT">STT</label>
                <input type="text" id="txtsSTT" class="form-control" value="@Html.Raw(Html.Encode(Model.iSTT))" maxlength="50" autocomplete="off" />
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <div class="text-center">
        <button class="btn btn-default" data-dismiss="modal"><i class="fa fa-ban" aria-hidden="true"></i><span>Hủy</span></button>
        <button class="btn btn-primary" onclick="Save()"><i class="fa fa-download" aria-hidden="true"></i><span>Lưu</span></button>
    </div>
</div>