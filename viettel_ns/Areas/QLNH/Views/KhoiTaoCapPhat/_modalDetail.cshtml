@using Viettel.Models.QLNH.KhoiTao
@model NH_KT_KhoiTaoCapPhatData

<div class="modal-body">
    <div>
        <div class="chao-banner1">
            <label>Thông tin chung:</label>
        </div>
        <hr class="bg-gray" />
        <div class="form-group row">
            <div class="col-sm-6">
                <label>Năm khởi tạo</label>
                <div>@Html.Raw(Html.Encode(Model.iNamKhoiTao))</div>
            </div>
            <div class="col-sm-6">
                <label>Ngày khởi tạo</label>
                <div>@(Model.dNgayKhoiTao.HasValue ? Model.dNgayKhoiTao.Value.ToString("dd/MM/yyyy") : string.Empty)</div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6">
                <label>Đơn vị</label>
                <div>@Html.Raw(Html.Encode(Model.sTenDonVi))</div>
            </div>
            <div class="col-sm-6">
                <label>Tỉ giá</label>
                <div>@Html.Raw(Html.Encode(Model.sTenTiGia))</div>
            </div>

        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <label>Mô tả</label>
                <div>@Html.Raw(!string.IsNullOrEmpty(Html.Encode(Model.sMoTa)) ? Html.Encode(Model.sMoTa).Replace("\n", "<br/>") : string.Empty)</div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <div class="text-center">
        <button class="btn btn-default" data-dismiss="modal"><i class="fa fa-ban" aria-hidden="true"></i><span>Đóng</span></button>
        <button class="btn btn-primary" onclick="onDetail('@Model.ID')" id="btnDetailModal"><i class="fa fa-download" aria-hidden="true"></i><span>Chi tiết</span></button>
    </div>
</div>

