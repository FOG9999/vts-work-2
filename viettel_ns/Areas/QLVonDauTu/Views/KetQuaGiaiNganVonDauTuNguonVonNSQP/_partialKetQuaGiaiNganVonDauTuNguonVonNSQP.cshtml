@using Viettel.Models.QLVonDauTu
@model IEnumerable<VDTKetQuaGiaiNganChiKinhPhiDauTuViewModel_v2>
@section Styles{
    <link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">
}
<script src="~/Scripts/jsNumber.js"></script>

