<div class="tableFixHead">
    <table class="table table-bordered" id="baocaoTHTHDA">
        <thead>
            <tr class="text-center" style="background-color: #06A199; color:white">
                <th style="width:50px" rowspan="4">STT</th>
                <th style="min-width:200px" rowspan="4">Đơn vị, dự toán</th>
                <th style="width:100px" colspan="3">Dự toán năm @ViewBag.iNamKeHoach</th>
                <th colspan="11">Thực hiện giải ngân</th>
            </tr>
            <tr class="text-center" style="background-color: #06A199; color:white">
                <th style="min-width:120px" rowspan="3">Dự toán đơn vị đề nghị chuyển năm @ViewBag.iNamTruoc sang năm @ViewBag.iNamKeHoach</th>
                <th style="min-width:120px" rowspan="3">Năm nay</th>
                <th style="min-width:120px" rowspan="3">Cộng</th>
                <th style="min-width:500px" colspan="6">Chi tại Bộ quốc phòng</th>
                <th style="min-width:500px" colspan="5">Rút dự toán tại Kho bạc nhà nước</th>
            </tr>
            <tr class="text-center" style="background-color: #06A199; color:white">
                <th style="min-width:120px" rowspan="2">Dự toán được thông báo</th>
                <th style="min-width:120px" rowspan="2">Cục Tài chính thanh toán trực tiếp cả tạm ứng và cấp uỷ quyền</th>
                <th style="min-width:120px" colspan="4">Kết quả giải ngân năm @ViewBag.iNamKeHoach</th>
                <th style="min-width:120px" rowspan="2">Dự toán được thông báo ra Kho bạc</th>
                <th style="min-width:120px" colspan="4">Kết quả giải ngân năm @ViewBag.iNamKeHoach</th>
            </tr>
            <tr class="text-center" style="background-color: #06A199; color:white">
                <th style="min-width:120px">Thanh toán KLHT</th>
                <th style="min-width:120px">Tạm ứng</th>
                <th style="min-width:120px">Cộng</th>
                <th style="min-width:120px">Đạt tỉ lệ</th>
                <th style="min-width:120px">Thanh toán KLHT</th>
                <th style="min-width:120px">Tạm ứng</th>
                <th style="min-width:120px">Cộng</th>
                <th style="min-width:120px">Đạt tỉ lệ</th>
            </tr>
            <tr class="text-center" style="background-color: #06A199; color:white">
                <th>1</th>
                <th>2</th>
                <th>3</th>
                <th>4</th>
                <th>5=3+4</th>
                <th>6</th>
                <th>7</th>
                <th>8</th>
                <th>9</th>
                <th>10=8+9</th>
                <th>11=10/6</th>
                <th>12</th>
                <th>13</th>
                <th>14</th>
                <th>15=13+14</th>
                <th>16=15/12</th>
            </tr>
        </thead>
        <tbody>

            @{
                int count = 0;
                foreach (var item in Model)
                {
                    count++;
                    break;
                }
                if (count > 0)
                {
                        <tr>
                            <td class="text-bold" align="center">A</td>
                            <td class="text-bold " colspan="15" align="left" id="idNganSach"></td>
                        </tr>
                }

                foreach (var item in Model)
                {
                    
                    string bold = "";
                    if (@item.IsBold == 1)
                    {
                        bold = "text-bold";
                    }
                    <tr>
                        <td align="center" class="@bold">@item.Position</td>

                        <td align="left" class="@bold">@item.sNoiDung</td>

                        <td align="right" class="fDuToanDonViDeNghiChuyenSangNamSau @bold"> @item.fDuToanDonViDeNghiChuyenSangNamSau.Value.ToString("###,###")</td>

                        <td align="right" class="fDuToanDonViNamNay @bold">@item.fDuToanDonViNamNay.Value.ToString("###,###")</td>

                        <td align="right" class="@bold">@item.fTongCongDuToanNam.Value.ToString("###,###")</td>

                        <td align="right" class="fDuToanDuocThongBaoBQP @bold">@item.fDuToanDuocThongBaoBQP.Value.ToString("###,###")</td>

                        <td align="right" class="fThanhToanBQP @bold">@item.fThanhToanBQP.Value.ToString("###,###")</td>
                        <td align="right" class="@bold">0</td>
                        <td align="right" class="fTamUngBQP @bold">@item.fTamUngBQP.Value.ToString("###,###")</td>
                        <td align="right" class="@bold">@item.fTongCongBQP.Value.ToString("###,###")</td>
                        <td align="right" class="@bold">@item.fDatTiLeBQP.Value.ToString("0.###")</td>
                        <td align="right" class="fDuDoanDuocThongBaoKBNN @bold">@item.fDuDoanDuocThongBaoKBNN.Value.ToString("###,###")</td>
                        <td align="right" class="fThanhToanKBNN @bold">@item.fThanhToanKBNN.Value.ToString("###,###")</td>
                        <td align="right" class="fTamUngKBNN @bold">@item.fTamUngKBNN.Value.ToString("###,###")</td>
                        <td align="right" class="@bold">@item.fTongCongKBNN.Value.ToString("###,###")</td>
                        <td align="right" class="@bold">@item.fDatTiLeKBNN.Value.ToString("0.##")</td>
                    </tr>

                }

            }

        </tbody>
        
    </table>
</div>