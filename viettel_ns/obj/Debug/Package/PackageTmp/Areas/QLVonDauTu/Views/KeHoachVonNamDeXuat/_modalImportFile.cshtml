@using Viettel.Models.QLVonDauTu
@model FileFtpModel
<div class="form-group row">
    <div class="col-sm-12 col-md-12 col-lg-12">
        <table class="table table-bordered">
            <thead>
            <th>Chọn</th>
            <th>STT</th>
            <th>Tên file</th>
            </thead>
            <tbody>
                @{
                    if (Model.Items != null)
                    {
                        foreach (var item in Model.Items)
                        {
                        <tr>
                            <td align="center"><input type="checkbox" value="@item.SUrl" class="checkbox-header" name="checkboxInRow"/></td>
                            <td align="center">@item.IStt </td>
                            <td>@item.SNameFile </td>
                        </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal-footer">
    <div class="text-center">
        <button class="btn btn-default" data-dismiss="modal"><i class="fa fa-ban" aria-hidden="true"></i><span>Hủy</span></button>
        <button class="btn btn-primary" onclick="ImportFile()"><i class="fa fa-download" aria-hidden="true"></i><span>Đồng bộ</span></button>
    </div>
</div>