@using Viettel.Models.QLNH
@model NHDMNoiDungChiViewModel

@{
    int pageIndex = (Model._paging.CurrentPage - 1) * Model._paging.ItemsPerPage;
}
<div class="tooltip-header-search">
    <div class="col-sm-8" style="display:flex;padding-left:0px;">
        <label class="control-label">Danh mục nội dung chi (@Model._paging.TotalItems)</label>
    </div>
    <button class="btn btn-primary pull-right" style="margin-right:10px;" onclick="OpenModal()" data-toggle="modal" data-target="#modalNoiDung"><i class="fa fa-plus" aria-hidden="true"></i>Thêm mới</button>
    <button class="btn btn-info pull-right" style="margin-right:10px;" onclick="ResetChangePage()"><i class="fa fa-refresh" aria-hidden="true"></i>Làm mới</button>
</div>
<table class="table table-bordered tr-hover" id="tbListNoiDung">
    <thead class="header-search">
        <tr>
            <th width="10%"></th>
            <th width="20%"><input type="text" class="form-control gr_search" id="txtMaNoiDungChi" placeholder="Mã nội dung chi"/></th>
            <th width="30%"><input type="text" class="form-control gr_search" id="txtTenNoiDungChi" placeholder="Tên nội dung chi"/></th>
            <th width="25%"><input type="text" class="form-control gr_search" id="txtMoTa" placeholder="Mô tả"/></th>
            <th width="15%"><button class="btn btn-info" onclick="ChangePage()"><i class="fa fa-search" aria-hidden="true"></i>Tìm kiếm</button></th>
        </tr>
    </thead>
    <thead>
        <tr>
            <th width="10%">STT</th>
            <th width="20%">Mã nội dung chi</th>
            <th width="30%">Tên nội dung chi</th>
            <th width="25%">Mô tả</th>
            <th width="15%">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @{
            int index = 0;
            foreach (var item in Model.Items)
            {
                index++;
                <tr style="cursor: pointer">
                    <td class="text-center">@(pageIndex + index)</td>
                    <td class="text-left">@Html.Raw(Html.Encode(item.sMaNoiDungChi))</td>
                    <td class="text-left">@Html.Raw(Html.Encode(item.sTenNoiDungChi))</td>
                    <td class="text-left">@Html.Raw(!string.IsNullOrEmpty(Html.Encode(item.sMoTa)) ? Html.Encode(item.sMoTa).Replace("\n", "<br/>") : string.Empty)</td>
                    <td class="text-center">
                        <button type="button" class="btn-detail" title="Xem chi tiết" onclick="OpenModalDetail('@item.ID')" data-toggle="modal" data-target="#modalNoiDung"><i class="fa fa-eye fa-lg" aria-hidden="true"></i></button>
                        <button type="button" class="btn-edit" title="Sửa" onclick="OpenModal('@item.ID')" data-toggle="modal" data-target="#modalNoiDung"><i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i></button>
                        <button type="button" class="btn-delete" title="Xóa" onclick="Xoa('@item.ID')"><i class="fa fa-trash-o fa-lg" aria-hidden="true"></i></button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@Html.BuildPagingButtons(Model._paging)

<script type="text/javascript">
    $(document).ready(function () {
        $('.date')
            .datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                autoclose: true,
                language: 'vi',
                todayHighlight: true,
            });

        $("#tbListNoiDung .gr_search").each(function (index, value) {
            $(this).keypress(function (e) {
                if (e.which == 13) {//Enter key pressed
                    ChangePage();
                }
            });
        });
    });
</script>