@using Viettel.Models.QLNH
@using Viettel.Domain.DomainModel
@model QuyetToan_ChungTuTaiSanModel

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">
}
<div class="modal fade" id="modaListlTaiSan" tabindex="-1" role="dialog" aria-labelledby="modalListTaiSanLabel" aria-hidden="true">
    <div class="modal-dialog" role="document" style="width:60%">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title text-bold text-left" id="modalListTaiSanLabel"></h3>
            </div>
            <div id="contentModalListTaiSan">
            </div>
        </div>
    </div>
</div>
<div id="divModalConfirm">

</div>

<div class="modal-body">
    <div class="form-group">
        <input type="hidden" id="idChungTu" value="@Model.ChungTuModel.ID" />
        <input type="hidden" id="dNgayTao" value="@Html.Raw(Html.Encode(Model.ChungTuModel.dNgayTao))" />
        <input type="hidden" id="arrTaiSan" value="@Json.Encode(@Model.ListTaiSan.Items)" />
        <div>
            <h4 class="color-text-red">Thông tin chứng từ:</h4>
            <hr class="color-background-red">
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                <label for="txtsTenChungTu">Tên chứng từ</label>
                <input type="text" class="form-control" id="txtsTenChungTu" value="@Html.Raw(Html.Encode(Model.ChungTuModel.sTenChungTu))" />
            </div>
            <div class="col-sm-4">
                <label for="txtsSoChungTu">Số chứng từ</label>
                @Helpers.Required()
                <input type="text" class="form-control" id="txtsSoChungTu" value="@Html.Raw(Html.Encode(Model.ChungTuModel.sSoChungTu))" />
            </div>
            <div class="col-sm-4">
                <label for="dNgayChungTu">Ngày chứng từ</label>
                <div class='input-group date'>
                    <input type="text" class="form-control" id="txtdNgayChungTu" value="@(Model.ChungTuModel.dNgayChungTu.HasValue ? Model.ChungTuModel.dNgayChungTu.Value.ToString("dd/MM/yyyy") : string.Empty)" autocomplete="off" />
                    <span class="btn-default input-group-addon"><i class="fa fa-calendar" aria-hidden="true"></i></span>
                </div>
            </div>
        </div>
    </div>
    <div>
        <div>
            <h4 class="color-text-red">Thông tin tài sản:</h4>
            <hr class="color-background-red">
        </div>
        <div class="row" style="margin-right: 0px; margin-left: 0px; margin-bottom: 5px;">
            <div class="input-group pull-right">
                <div class="input-group-append">
                    <button class="btn btn-primary pull-right" style="margin-right:10px;" onclick="AddRow()"><i class="fa fa-plus" aria-hidden="true"></i>Thêm mới</button>
                </div>
            </div>
        </div>
        <div style=" overflow-x : auto">
            <table class="table table-bordered tr-hover" id="tbListTaiSan">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Mã tài sản</th>
                        <th>Tên tài sản</th>
                        <th>Mô tả</th>
                        <th>Loại tài sản</th>
                        <th>Ngày bắt đầu sử dụng</th>
                        <th>Tình trạng sử dụng</th>
                        <th>Số lượng</th>
                        <th>Đơn vị tính</th>
                        <th>Nguyên giá</th>
                        <th>Trạng thái sử dụng</th>
                        <th>Đơn vị sử dụng</th>
                        <th>Thuộc dự án</th>
                        <th>Thuộc hợp đồng</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal-footer">
    <div class="text-center">
        <button class="btn btn-default" onclick="Back()"><i class="fa fa-ban" aria-hidden="true"></i><span>Hủy</span></button>
        <button class="btn btn-primary" onclick="Save()"><i class="fa fa-download" aria-hidden="true"></i><span>Lưu</span></button>
    </div>
</div>
