            <!--<th width=""></th>
            <th width=""></th>
            <th width=""><input type="text" class="form-control clearable" id="txtSoDeNghi" autocomplete="off" /></th>
            <th width=""><input type="text" class="form-control clearable" id="txtSoDeNghi" autocomplete="off" /></th>
