@using Viettel.Models.QLVonDauTu
@model VDTThongTriModel

@{
    ViewBag.Title = "Cập nhật thông tin thông tri thanh toán";
    Layout = "~/Views/Shared/_LayoutWebNew.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">

<div class="main">
    <input type="hidden" id="piIdThongTri" value="@Model.iID_ThongTriID" />
    <input type="hidden" id="piIdDonVi" value="@Model.iID_DonViID" />
    <input type="hidden" id="piNamThongTri" value="@Model.iNamThongTri" />
    <input type="hidden" id="psMaNguonVon" value="@Model.sMaNguonVon" />
    <input type="hidden" id="piLoaiThongTri" value="@Model.iLoaiThongTri" />
    <input type="hidden" id="psMaThongTri" value="@Model.sMaThongTri" />
    <input type="hidden" id="pdNgayThongTri" value="@Model.dNgayThongTri" />
    <input type="hidden" id="piNamNganSach" value="@Model.iNamNganSach" />
    <input type="hidden" id="psMoTa" value="@Model.sMoTa" />
    <input type="hidden" id="isFromThongTri" value="@ViewBag.isFromThongTri" />

    <div class="panel-list-item col-sm-12">
        <div class="card">
            <div class="card-body create_thdt">
                <div class="form-group">
                    <h4 class="color-text-red">Thông tin thông tri:</h4>
                    <div style="float: right; margin-top: -37px">
                        @*<button class="btn btn-info" onclick="Loc()"><i class="fa fa-search" aria-hidden="true"></i>Lọc</button>*@
                    </div>
                    <hr class='color-background-red' />
                    <div class="form-group row">
                        <div class="col-sm-8">
                            <label for="txtDonViQuanLy">Đơn vị quản lý</label>
                            @Html.DropDownList("iID_DonViQuanLyID", (SelectList)(ViewBag.ListDonViQuanLy), new { @class = "form-control requireInput", @id = "iID_DonViQuanLyID", @disabled = "disabled" })
                        </div>

                        <div class="col-sm-4">
                            <label for="sNamThongTri">Năm làm việc</label>
                            <input type="text" disabled id="sNamThongTri" class="form-control" name="sNamThongTri" value="@Model.iNamThongTri" maxlength="100" autocomplete="off" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-8">
                            <label for="sMaNguonVon">Nguồn vốn</label>
                            @Html.DropDownList("sMaNguonVon", (SelectList)(ViewBag.ListNguonVon), new { @class = "form-control requireInput", @id = "sMaNguonVon", @disabled = "disabled" })
                        </div>
                        <div class="col-sm-4">
                            <label for="iLoaiThongTri">Loại cấp phát</label>
                            @Html.DropDownList("iLoaiThongTri", (SelectList)(ViewBag.ListLoaiThongTri), new { @class = "form-control requireInput", @id = "iLoaiThongTri", @disabled = "disabled" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label for="sMaThongTri">Mã thông tri</label>
                            @{
                                if (ViewBag.isFromThongTri == 0)
                                {
                                    <input type="text" disabled id="sMaThongTri" class="form-control requireInput" name="sMaThongTri" value="@Model.sMaThongTri" maxlength="50" autocomplete="off" />
                                }
                                else
                                {
                                    <input type="text" id="sMaThongTri" class="form-control requireInput" name="sMaThongTri" value="@Model.sMaThongTri" maxlength="50" autocomplete="off" />
                                }
                            }
                        </div>
                        <div class="col-sm-4">
                            <label for="dNgayThongTri">Ngày lập</label>
                            <div class='input-group date'>
                                <input type='text' disabled class="form-control requireInput" value="@ViewBag.dNgayThongTri" id="dNgayThongTri" name="dNgayThongTri" autocomplete="off" />
                                <span class="btn-default input-group-addon">
                                    <i class="fa fa-calendar" aria-hidden="true"></i>
                                </span>
                            </div>
                        </div>
                        @if (Model.iLoaiThongTri == 3 || Model.iLoaiThongTri == 4)
                        {
                            <div class="col-sm-4">
                                <label for="iNamNganSach">Năm ngân sách</label>
                                @Html.DropDownList("iNamNganSach", (SelectList)(ViewBag.ListNamNganSach), new { @class = "form-control requireInput", @id = "iNamNganSach", @disabled = "disabled" })
                            </div>
                        }
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-12">
                            <label for="sMoTa">Mô tả thông tri</label>
                            @{
                                if (ViewBag.isFromThongTri == 0)
                                {
                                    <input type="text" disabled id="sMoTa" class="form-control requireInput" name="sMoTa" value="@Model.sMoTa" autocomplete="off" />
                                }
                                else
                                {
                                    <input type="text" id="sMoTa" class="form-control requireInput" name="sMoTa" value="@Model.sMoTa" autocomplete="off" />
                                }
                            }

                        </div>
                    </div>


                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="" id="tabThanhToan"><a href="#thanhtoan" aria-controls="thanhtoan" role="tab" data-toggle="tab">Thanh Toán</a></li>
                        <li role="presentation" class="" id="tabThuHoi"><a href="#thuhoi" aria-controls="thuhoi" role="tab" data-toggle="tab">Thu Hồi</a></li>
                        <li role="presentation" class="" id="tabTamUng"><a href="#tamung" aria-controls="tamung" role="tab" data-toggle="tab">Tạm Ứng</a></li>
                        <li role="presentation" class="" id="tabKinhPhi"><a href="#kinhphi" aria-controls="kinhphi" role="tab" data-toggle="tab">Kinh Phí</a></li>
                        <li role="presentation" class="" id="tabHopThuc"><a href="#hopthuc" aria-controls="hopthuc" role="tab" data-toggle="tab">Hợp Thức</a></li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="thanhtoan">
                            <table class="table table-bordered " id="tblThanhToan">
                                <thead>
                                    <tr>
                                        <th>Mục</th>
                                        <th>Tiểu mục</th>
                                        <th>Tiết mục</th>
                                        <th>Ngành</th>
                                        <th>Loại công trình</th>
                                        <th>Tên dự án</th>
                                        <th>Số tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="thuhoi">
                            <table class="table table-bordered" id="tblThuHoi">
                                <thead>
                                    <tr>
                                        <th>Mục</th>
                                        <th>Tiểu mục</th>
                                        <th>Tiết mục</th>
                                        <th>Ngành</th>
                                        <th>Loại công trình</th>
                                        <th>Tên dự án</th>
                                        <th>Số tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="tamung">
                            <table class="table table-bordered" id="tblTamUng">
                                <thead>
                                    <tr>
                                        <th>Mục</th>
                                        <th>Tiểu mục</th>
                                        <th>Tiết mục</th>
                                        <th>Ngành</th>
                                        <th>Loại công trình</th>
                                        <th>Tên dự án</th>
                                        <th>Số tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="kinhphi">
                            <table class="table table-bordered" id="tblKinhPhi">
                                <thead>
                                    <tr>
                                        <th>Mục</th>
                                        <th>Tiểu mục</th>
                                        <th>Tiết mục</th>
                                        <th>Ngành</th>
                                        <th>Loại công trình</th>
                                        <th>Tên dự án</th>
                                        <th>Số tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="hopthuc">
                            <table class="table table-bordered" id="tblHopThuc">
                                <thead>
                                    <tr>
                                        <th>Mục</th>
                                        <th>Tiểu mục</th>
                                        <th>Tiết mục</th>
                                        <th>Ngành</th>
                                        <th>Loại công trình</th>
                                        <th>Tên dự án</th>
                                        <th>Số tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>



                    <div class="form-group text-center">
                        <button class="btn btn-default" style="width: 100%" onclick="Huy()"><i class="fa fa-ban" aria-hidden="true"></i><span>Hủy</span></button>
                        @{
                            if (ViewBag.isFromThongTri == 0) { }
                            else
                            {
                                <button class="btn btn-primary" id="btnLuu" style="width: 100%" onclick="Luu()"><i class="fa fa-download" aria-hidden="true"></i><span>Lưu</span></button>
                            }
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/QLVonDauTu/NganSachQuocPhong/jsVDT_SuaThongTriThanhToan.js" type="text/javascript"></script>
<script src="/Scripts/sheet/jsNumber.js" type="text/javascript"></script>
<script src="~/Scripts/js/js_vdtWeb.js" type="text/javascript"></script>

