@using Viettel.Models.KeHoachChiTietBQP;
@using Viettel.Domain.DomainModel;
@using DomainModel;
@using System.Globalization;
@using Viettel.Models.QLNH;

@model NH_KHChiTietBQPModel

<div class="modal-body">
    <input type="hidden" id="hIdKeHoachChiTietBQP" value="@Model.ID" />
    <input type="hidden" id="hILoai" value="@Model.iLoai" />
    <input type="hidden" id="hiID_ParentID" value="@Model.iID_ParentID" />
    <input type="hidden" id="hiID_TiGiaID" value="@Model.iID_TiGiaID" />
    <input type="hidden" id="hiLanDieuChinh" value="@Model.iLanDieuChinh" />
    <input type="hidden" id="hState" value="@ViewBag.State" />

    @* Row 1 *@
    <div class="form-group row">
        <div class="col-sm-4">
            <label for="iID_KHTongTheTTCPID">Số kế hoạch tổng thể TTCP phê duyệt</label>
            @Helpers.Required()
            @if (ViewBag.State == "UPDATE")
            {
                @*@Html.DropDownList("iID_KHTongTheTTCPID", (SelectList)(ViewBag.ListKHTongTheTTCP), new { @class = "form-control", @id = "iID_KHTongTheTTCPID", @disabled = true })*@
                <select class="form-control" id="iID_KHTongTheTTCPID" name="iID_KHTongTheTTCPID" disabled>
                    @foreach (var item in (List<LookupKHTTCP>)(ViewBag.ListKHTongTheTTCP))
                    {
                        <option value="@item.Id" data-loaikehoach="@item.iLoai" data-fromdate="@item.iGiaiDoanTu" data-todate="@item.iGiaiDoanDen"
                                data-namkehoach="@item.iNamKeHoach" @(item.Id == Model.iID_KHTongTheTTCPID ? "selected" : "")>
                            @item.DisplayName
                            </option>
                        }
                </select>
            }
            else if (ViewBag.State == "ADJUST")
            {
                <div class='input-group'>
                    @*@Html.DropDownList("iID_KHTongTheTTCPID", (SelectList)(ViewBag.ListKHTongTheTTCP), new { @class = "form-control", @id = "iID_KHTongTheTTCPID", @disabled = true })*@
                    <select class="form-control" id="iID_KHTongTheTTCPID" name="iID_KHTongTheTTCPID" disabled>
                        @foreach (var item in (List<LookupKHTTCP>)(ViewBag.ListKHTongTheTTCP))
                        {
                            <option value="@item.Id" data-loaikehoach="@item.iLoai" data-fromdate="@item.iGiaiDoanTu" data-todate="@item.iGiaiDoanDen"
                                    data-namkehoach="@item.iNamKeHoach" @(item.Id == Model.iID_KHTongTheTTCPID ? "selected" : "")>
                                @item.DisplayName
                            </option>
                        }
                    </select>
                    <span class="btn-default input-group-addon @(ViewBag.ParentIsActive ? "disabled" : "")"
                          style="@(ViewBag.ParentIsActive ? "background-color: #eee" : "")"
                          title="@(!ViewBag.ParentIsActive ? "Sử dụng bản mới nhất của kế hoạch tổng thể TTCP này?" : "")"
                          onclick="UpdateParentTTCP('@Model.iID_KHTongTheTTCPID')">
                        <i class="fa fa-angle-double-up" aria-hidden="true"></i>
                    </span>
                </div>
            }
            else
            {
                <select class="form-control" id="iID_KHTongTheTTCPID" name="iID_KHTongTheTTCPID">
                    @foreach (var item in (List<LookupKHTTCP>)(ViewBag.ListKHTongTheTTCP))
                    {
                        <option value="@item.Id" data-loaikehoach="@item.iLoai" data-fromdate="@item.iGiaiDoanTu" data-todate="@item.iGiaiDoanDen"
                                data-namkehoach="@item.iNamKeHoach" @(item.Id == Model.iID_KHTongTheTTCPID ? "selected" : "")>
                            @item.DisplayName
                        </option>
                    }
                </select>
                @*@Html.DropDownList("iID_KHTongTheTTCPID", (SelectList)(ViewBag.ListKHTongTheTTCP), new { @class = "form-control", @id = "iID_KHTongTheTTCPID" })*@
            }
        </div>
        <div class="col-sm-4">
            <label for="iLoai">Loại kế hoạch</label>
            <select id="iLoai" class="form-control" @(ViewBag.State == "UPDATE" || ViewBag.State == "ADJUST" ? "disabled" : "")>
                <option value="1">Theo giai đoạn</option>
                <option value="3">Theo giai đoạn con</option>
                <option value="2">Theo năm</option>
            </select>
        </div>
        <div id="formParrentID" class="col-sm-4 invisible">
            <label for="iID_ParentID">Số Kế hoạch chi tiết BQP cha</label>
            @Helpers.Required()
            @if (ViewBag.State == "UPDATE" || ViewBag.State == "ADJUST")
            {
                @*@Html.DropDownList("iID_ParentID", (SelectList)(ViewBag.ListKHChiTietBQP), new { @class = "form-control", @id = "iID_ParentID", @disabled = true })*@
                <select class="form-control" id="iID_ParentID" name="iID_ParentID" disabled>
                    @foreach (var item in (List<LookupKHBQP>)(ViewBag.ListKHChiTietBQP))
                    {
                        <option value="@item.Id" data-loaikehoach="@item.iLoai" data-fromdate="@item.iGiaiDoanTu" data-todate="@item.iGiaiDoanDen"
                                data-namkehoach="@item.iNamKeHoach" @(item.Id == Model.iID_ParentID ? "selected" : "")>
                            @item.DisplayName
                        </option>
                    }
                </select>
            }
            else
            {
                <select class="form-control" id="iID_ParentID" name="iID_ParentID">
                    @foreach (var item in (List<LookupKHBQP>)(ViewBag.ListKHChiTietBQP))
                    {
                        <option value="@item.Id" data-loaikehoach="@item.iLoai" data-fromdate="@item.iGiaiDoanTu" data-todate="@item.iGiaiDoanDen"
                                data-namkehoach="@item.iNamKeHoach" @(item.Id == Model.iID_ParentID ? "selected" : "")>
                            @item.DisplayName
                        </option>
                    }
                </select>
                @*@Html.DropDownList("iID_ParentID", (SelectList)(ViewBag.ListKHChiTietBQP), new { @class = "form-control", @id = "iID_ParentID" })*@
            }
        </div>
    </div>

    @* Row 2 *@
    <div class="form-group row">
        <div id="formGiaiDoanTu" class="col-sm-4">
            <label for="iGiaiDoanTu">Giai đoạn từ</label>
            @Helpers.Required()
            <input type="text" required id="txtGiaiDoanTu" class="form-control" onkeydown="ValidateInputKeydown(event, this, 1)" onblur="ValidateInputFocusOut(event, this, 6)" value="@Html.Raw(Html.Encode(Model.iGiaiDoanTu))" maxlength="4" autocomplete="off" />
        </div>
        <div id="formGiaiDoanDen" class="col-sm-4">
            <label for="iGiaiDoanDen">Giai đoạn đến</label>
            @Helpers.Required()
            <input type="text" required id="txtGiaiDoanDen" class="form-control" onkeydown="ValidateInputKeydown(event, this, 1)" onblur="ValidateInputFocusOut(event, this, 6)" value="@Html.Raw(Html.Encode(Model.iGiaiDoanDen))" maxlength="4" autocomplete="off" />
        </div>
        <div id="formNamKeHoach" class="col-sm-4 hidden">
            <label for="iNamKeHoach">Năm</label>
            @Helpers.Required()
            <input type="text" required id="txtNamKeHoach" class="form-control" onkeydown="ValidateInputKeydown(event, this, 1)" onblur="ValidateInputFocusOut(event, this, 6)" value="@Html.Raw(Html.Encode(Model.iNamKeHoach))" maxlength="4" autocomplete="off" />
        </div>
        <div class="col-sm-4">
            <label for="iID_TiGiaID">Tỉ giá</label>
            @Helpers.Required()
            <select id="iID_TiGiaID" name="iID_TiGiaID" class="form-control" onchange="ChangeTiGiaSelect();">
                @if (ViewBag.ListTiGia != null)
                {
                    foreach (var tigia in (List<NH_DM_TiGia>)ViewBag.ListTiGia)
                    {
                        <option value="@tigia.ID" @(Model.iID_TiGiaID == tigia.ID ? "selected" : string.Empty) data-mg="@Html.Raw(Html.Encode(tigia.sMaTienTeGoc))">@Html.Raw(Html.Encode(tigia.sTenTiGia))</option>
                    }
                }
            </select>
            <hr />
            <div id="tienTeQuyDoiID" class="text-italic h5">
            </div>
        </div>
    </div>


    <div class="chao-banner1">
        <label>Kế hoạch chi tiết Bộ quốc phòng phê duyệt theo giai đoạn</label>
    </div>
    <hr class="bg-gray" />
    <div class="form-group row">
        <div class="col-sm-4">
            <label for="sSoKeHoach">Số kế hoạch</label>
            @Helpers.Required()
            <input type="text" required id="txtSoKeHoach" class="form-control" value="@Html.Raw(Html.Encode(Model.sSoKeHoach))" maxlength="100" autocomplete="off" />
        </div>
        <div class="col-sm-4">
            <label for="dNgayKeKoach">Ngày kế hoạch</label>
            <div class='input-group date'>
                <input type='text' class="form-control" id="txtNgayKeHoach"
                       value="@Html.Raw(Model.dNgayKeHoach.HasValue ? Model.dNgayKeHoach.Value.ToString("dd/MM/yyyy") : "")" 
                       autocomplete="off" placeholder="dd/MM/yyyy" />
                <span class="btn-default input-group-addon">
                    <i class="fa fa-calendar" aria-hidden="true"></i>
                </span>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-12">
            <label for="sMoTaChiTiet">Mô tả</label>
            <textarea rows="4" style="max-width: 100%" id="txtMoTaChiTiet" class="form-control" autocomplete="off">@Html.Raw(Html.Encode(Model.sMoTaChiTiet))</textarea>
        </div>
    </div>
</div>
<div class="modal-footer">
    <div class="text-center">
        <button class="btn btn-default" id="btnHuyModal" data-dismiss="modal"><i class="fa fa-ban" aria-hidden="true"></i><span>Hủy</span></button>
        <button class="btn btn-primary" onclick="Save()" id="btnLuuModal"><i class="fa fa-download" aria-hidden="true"></i><span>Lưu</span></button>
    </div>
</div>
<script src="~/Scripts/QLNH/KeHoachChiTietBQP/jsNH_KeHoachChiTietBQP.js"></script>

<script type="text/javascript">
    $(document).ready(function () {

        // Set init UI theo form thêm mới hoặc sửa.
        let loai = $("#hILoai").val();
        let parentId = $("#hiID_ParentID").val();
        let tiGiaId = $("#hiID_TiGiaID").val();

        let gdt = $("#formGiaiDoanTu");             // Div-form giai đoạn từ.
        let gdd = $("#formGiaiDoanDen");            // Div-form giai đoạn đến.
        let nkh = $("#formNamKeHoach");             // Div-form năm kế hoạch.
        let pr = $("#formParrentID");               // Div-form kế hoạch BQP cha.
        let elGdt = $("#txtGiaiDoanTu");            // Input giai đoạn từ.
        let elGdd = $("#txtGiaiDoanDen");           // Input giai đoạn đến.
        let elNkh = $("#txtNamKeHoach");            // Input năm kế hoạch.
        let iLoaiKHTT = $("#iID_KHTongTheTTCPID").val() ? $("#iID_KHTongTheTTCPID").find(':selected').data('loaikehoach') : 1;
        // Check loại kế hoạch trong DB (1 - GĐ, GĐ con; 2 - năm, '' - thêm mới)
        if (loai == '') {
            // Lấy loại KH TTCP mặc định khi load form mới.
            if (iLoaiKHTT == 2) {
                // Nếu loại == 2 thì disable giai đoạn, chỉ chọn năm, không load ra BQP cha.
                $("#iLoai option[value='1']").attr("disabled", true);
                $("#iLoai option[value='3']").attr("disabled", true);
                $("#iLoai").val(2);
            } else {
                // Nếu loại != 2 thì mặc định gán cho giá trị là 1 (kế hoạch theo giai đoạn)
                $("#iLoai option[value='1']").attr("disabled", false);      // Mặc dù là data init những vẫn bỏ disable cho chắc.
                $("#iLoai option[value='3']").attr("disabled", false);      // Mặc dù là data init những vẫn bỏ disable cho chắc.
                $("#iLoai").val(1);
            }
        } else if (loai == 1) {
            if (parentId == '') {
                // Theo giai đoạn
                $("#iLoai").val(1);
                gdt.removeClass('hidden');
                gdd.removeClass('hidden');
                nkh.addClass('hidden');
                pr.addClass('invisible');

                if (iLoaiKHTT == 1) {
                    elGdt.attr('readonly', true);
                    elGdd.attr('readonly', true);
                }
            } else {
                // Theo giai đoạn con
                $("#iLoai").val(3);
                gdt.removeClass('hidden');
                gdd.removeClass('hidden');
                nkh.addClass('hidden');
                pr.removeClass('invisible');
            }
        } else {
            // Loại là "Theo năm"
            $("#iLoai").val(2);
            if (iLoaiKHTT == 2) {
                gdt.addClass('hidden');
                gdd.addClass('hidden');
                nkh.removeClass('hidden');
                pr.addClass('invisible');

                elNkh.attr('readonly', true);
            } else {
                gdt.addClass('hidden');
                gdd.addClass('hidden');
                nkh.removeClass('hidden');
                pr.removeClass('invisible');
            }
        }

        // Kích hoạt event change
        let state = $("#hState").val();
        if (state != 'UPDATE' && state != 'ADJUST') {
            FullActionToSelect();
        } else {
            CreateLookupBQPByTTCPId($("#iID_KHTongTheTTCPID").val(), parentId);
        }

        // Nếu có giá trị tỉ giá thì show chi tiết tỉ giá.
        if (tiGiaId != '') {
            ChangeTiGiaSelect();
        }
        var isShowing = false;
        $('.date').datepicker({
            todayBtn: "linked",
            keyboardNavigation: false,
            forceParse: false,
            autoclose: true,
            language: 'vi',
            todayHighlight: true,
            format: "dd/mm/yyyy"
        }).on('hide', () => {
            isShowing = false;
        }).on('show', () => {
            isShowing = true;
        });

        $("#txtNgayKeHoach").keydown(function (event) {
            ValidateInputKeydown(event, this, 3);
        }).blur(function (event) {
            setTimeout(() => {
                if (!isShowing) ValidateInputFocusOut(event, this, 3);
            }, 0);
        });
    });
</script>
