@using Viettel.Models.QLNH.QuyetToan
@model NH_QT_QuyetToanNienDoData

<div class="modal-body">
    <div>
        <div class="chao-banner1">
            <label>Thông tin chung:</label>
        </div>
        <hr class="bg-gray" />
        <div class="form-group row">
            <div class="col-sm-4">
                <label>Số đề nghị</label>
                <div>@Html.Raw(Html.Encode(Model.sSoDeNghi))</div>
            </div>
            <div class="col-sm-4">
                <label>Ngày đề nghị</label>
                <div>@(Model.dNgayDeNghi.HasValue ? Model.dNgayDeNghi.Value.ToString("dd/MM/yyyy") : string.Empty)</div>
            </div>
            <div class="col-sm-4">
                <label>Năm kế hoạch</label>
                <div>@Html.Raw(Html.Encode(Model.iNamKeHoach))</div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                <label>Đơn vị</label>
                <div>@Html.Raw(Html.Encode(Model.sTenDonVi))</div>
            </div>
            <div class="col-sm-4">
                <label>Tỉ giá</label>
                <div>@Html.Raw(Html.Encode(Model.sTenTiGia))</div>
            </div>
            <div class="col-sm-4">
                <label>Loại quyết toán</label>
                <div>@(Model.iLoaiQuyetToan==1 ? "Quyết toán theo dự án" :"Quyết toán theo hợp đồng")</div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <label>Mô tả</label>
                <div>@Html.Raw(!string.IsNullOrEmpty(Html.Encode(Model.sMoTa)) ? Html.Encode(Model.sMoTa).Replace("\n", "<br/>") : string.Empty)</div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <div class="text-center">
        <button class="btn btn-default" data-dismiss="modal"><i class="fa fa-ban" aria-hidden="true"></i><span>Đóng</span></button>
        <button class="btn btn-primary" onclick="onDetail('@Model.ID')" id="btnDetailModal"><i class="fa fa-download" aria-hidden="true"></i><span>Chi tiết</span></button>
    </div>
</div>

