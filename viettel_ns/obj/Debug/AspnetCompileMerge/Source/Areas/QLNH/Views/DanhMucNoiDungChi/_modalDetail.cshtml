@using Viettel.Models.QLNH
@using System.Globalization;
@model DanhmucNgoaiHoi_NoiDungChiModel

<div class="modal-body">
    <div class="form-group row">
        <div class="col-sm-6">
            <label>Mã nội dung chi</label>
            <p>@Html.Raw(Html.Encode(Model.sMaNoiDungChi))</p>
        </div>
        <div class="col-sm-6">
            <label>Tên nội dung chi</label>
            <p>@Html.Raw(Html.Encode(Model.sTenNoiDungChi))</p>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-12">
            <label>Mô tả</label>
            <p>@Html.Raw(!string.IsNullOrEmpty(Html.Encode(Model.sMoTa)) ? Html.Encode(Model.sMoTa).Replace("\n", "<br/>") : string.Empty)</p>
        </div>
    </div>
</div>
<div class="modal-footer">
    <div class="text-center">
        <button class="btn btn-default" data-dismiss="modal"><i class="fa fa-ban" aria-hidden="true"></i><span>Hủy</span></button>
    </div>
</div>