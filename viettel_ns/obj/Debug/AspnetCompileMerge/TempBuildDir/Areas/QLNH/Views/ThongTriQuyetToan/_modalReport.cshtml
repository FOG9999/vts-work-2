<div class="modal-body">
    <input type="hidden" id="hIdThongTriQuyetToan" value="@ViewBag.IdThongTriQuyetToan" />
    <input type="hidden" id="urlExportReport" value="@Url.Action("ExportFile", "ThongTriQuyetToan")" />

    <div class="form-group row">
        <div class="col-sm-6">
            <label for="sDonViTienTe">Đơn vị tiền tệ</label>
            @Helpers.Required()
            <div>
                <select id="sDonViTienTe" class="form-control">
                    <option value="">-- Chọn đơn vị tiền tệ --</option>
                    <option value="USD">USD</option>
                    <option value="VND">VND</option>
                </select>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_ui_chuky")

<div class="modal-footer">
    <div class="text-center d-flex justify-content-center">
        <button class="btn btn-primary" id="btnChuKy"><i class="fa fa-download" aria-hidden="true"></i><span>Chữ ký</span></button>
        <button class="btn btn-primary" onclick="ExportReport('pdf')"> <i class="fa fa-download" aria-hidden="true"></i><span>Xuất PDF</span></button>
        <button class="btn btn-primary" onclick="ExportReport('xlsx')"> <i class="fa fa-download" aria-hidden="true"></i><span>Xuất Excel</span></button>
        <button class="btn btn-default" id="btnHuyModal" data-dismiss="modal"><i class="fa fa-ban" aria-hidden="true"></i><span>Hủy</span></button>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#sDonViTienTe").select2({ width: '100%', matcher: FilterInComboBox });
    });
</script>