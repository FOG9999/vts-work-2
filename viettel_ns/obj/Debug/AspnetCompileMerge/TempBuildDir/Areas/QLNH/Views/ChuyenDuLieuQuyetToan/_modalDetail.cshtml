@using Viettel.Models.QLNH.QuyetToan.ChuyenQuyetToan
@model NH_QT_ChuyenQuyetToanData

<div class="modal-body">
    <div>
        <div class="chao-banner1">
            <label>Thông tin chung:</label>
        </div>
        <hr class="bg-gray" />
        <div class="form-group row">
            <div class="col-sm-4">
                <label>Số chứng từ</label>
                <div>@Html.Raw(Html.Encode(Model.sSoChungTu))</div>
            </div>
            <div class="col-sm-4">
                <label>Ngày chứng từ</label>
                <div>@(Model.dNgayChungTu.HasValue ? Model.dNgayChungTu.Value.ToString("dd/MM/yyyy") : string.Empty)</div>
            </div>
            <div class="col-sm-4">
                <label>Đơn vị</label>
                <div>@Html.Raw(Html.Encode(Model.sTenDonVi))</div>
            </div>
            
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                <label>Loại thời gian</label>
                <div>@Html.Raw(Html.Encode(Model.sLoaiThoiGian))</div>
            </div>
            <div class="col-sm-4">
                <label>Thời gian</label>
                <div>@Html.Raw(Html.Encode(Model.iThoiGian))</div>
            </div>
            <div class="col-sm-4">
                <label>Mô tả</label>
                <div>@Html.Raw(!string.IsNullOrEmpty(Html.Encode(Model.sMoTa)) ? Html.Encode(Model.sMoTa).Replace("\n", "<br/>") : string.Empty)</div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <div class="text-center">
        <button class="btn btn-default" data-dismiss="modal"><i class="fa fa-ban" aria-hidden="true"></i><span>Đóng</span></button>
        <button class="btn btn-primary" onclick="onDetail('@Model.ID')" id="btnDetailModal"><i class="fa fa-download" aria-hidden="true"></i><span>Chi tiết</span></button>
    </div>
</div>

