@using Viettel.Domain.DomainModel
@using Viettel.Models.QLNH
@using System.Globalization;
@model NH_DM_NoiDungChi

<div class="modal-body">
    <input type="hidden" id="iID_NoiDungModal" value="@Model.ID">
    <div class="form-group">
        <div class="form-group row">
            <div class="col-sm-6">
                <label for="txtsMaNoiDungChi">Mã nội dung chi</label>
                @Helpers.Required()
                <input type="text" id="txtsMaNoiDungChi" class="form-control" value="@Html.Raw(Html.Encode(Model.sMaNoiDungChi))" maxlength="50" autocomplete="off" />
            </div>
            <div class="col-sm-6">
                <label for="txtsTenNoiDungChi">Tên nội dung chi</label>
                @Helpers.Required()
                <input type="text" id="txtsTenNoiDungChi" class="form-control" value="@Html.Raw(Html.Encode(Model.sTenNoiDungChi))" maxlength="50" autocomplete="off" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <label for="txtsMota">Mô tả</label>
                <textarea id="txtsMoTa" name="txtsMoTa" class="form-control" autocomplete="off">@Html.Raw(Html.Encode(Model.sMoTa))</textarea>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <div class="text-center">
        <button class="btn btn-default" data-dismiss="modal"><i class="fa fa-ban" aria-hidden="true"></i><span>Hủy</span></button>
        <button class="btn btn-primary" onclick="Save()"><i class="fa fa-download" aria-hidden="true"></i><span>Lưu</span></button>
    </div>
</div>