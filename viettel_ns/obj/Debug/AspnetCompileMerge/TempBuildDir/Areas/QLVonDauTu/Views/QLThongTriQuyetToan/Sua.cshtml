@model Viettel.Models.QLVonDauTu.VDTThongTriModel

@{
    ViewBag.Title = "Cập nhật thông tin thông tri thanh toán";
    Layout = "~/Views/Shared/_LayoutWebNew.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">

<input type="hidden" id="iIDThongTriID" value="@Model.iID_ThongTriID" />
<input type="hidden" id="iID_DonViID" value="@Model.sMaDonVi" />
<input type="hidden" id="iNguonVon" value="@Model.sMaNguonVon" />
<input type="hidden" id="iIDQuyetToanId" value="@Model.iID_BCQuyetToanNienDo"/>
<input type="hidden" id="bIsViewDetail" value="@ViewBag.bIsViewDetail" />
<div class="main">
    <div class="panel-list-item col-sm-12">
        <div class="card">
            <div class="card-body create_thdt">
                <div class="form-group">
                    <h4 class="color-text-red">Thông tin thông tri:</h4>
                    <div style="float: right; margin-top: -37px">
                        <button class="btn btn-danger" onclick="XoaTextThongTri()">Xóa</button>
                    </div>
                    <hr class='color-background-red' />
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label for="txtDonViQuanLy">Đơn vị quản lý</label>
                            @Html.DropDownList("iIdDonViId", (SelectList)(ViewBag.ListDonViQuanLy), new { @class = "form-control requireInput", @id = "iIdDonViId", @disabled = "disabled" })
                        </div>
                        <div class="col-sm-2">
                            <label for="ddlNguonVon">Nguồn vốn</label>
                            @Html.DropDownList("iIdNguonVonId", (SelectList)(ViewBag.ListNguonVon), new { @class = "form-control requireInput", @id = "iIdNguonVonId", @disabled = "disabled" })
                        </div>
                        <div class="col-sm-2">
                            <label for="sNamThongTri">Năm thực hiện</label>
                            <input type="text" id="sNamThongTri" class="form-control" name="sNamThongTri" value="@Model.iNamThongTri" disabled maxlength="100" />
                        </div>
                        <div class="col-sm-4">
                            <label for="sChonChungTu">Chứng từ</label>
                            @Html.DropDownList("iIdQuyetToan", (SelectList)(ViewBag.lstQuyetToan), new { @class = "form-control requireInput", @id = "iIdQuyetToan", @disabled = "disabled" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label for="sMaThongTri">Mã thông tri</label>
                            @Helpers.Required()
                            <input type="text" id="sMaThongTri" class="form-control requireInput" name="sMaThongTri" value="@Model.sMaThongTri" maxlength="50" autocomplete="off" />
                        </div>
                        <div class="col-sm-2">
                            <label for="dNgayThongTri">Ngày tạo thông tri</label>
                            <div class='input-group date' >
                                <input type='text' class="form-control requireInput" value="@ViewBag.dNgayThongTri" id="dNgayThongTri" name="dNgayThongTri" autocomplete="off" disabled />
                                <span class="btn-default input-group-addon" >
                                    <i class="fa fa-calendar" aria-hidden="true"></i>
                                </span>
                            </div>
                        </div>

                        <div class="col-sm-2">
                            <label for="sNguoiLap">Người lập thông tri</label>
                            @Helpers.Required()
                            <input type="text" id="sNguoiLap" class="form-control" name="sNguoiLap"value="@Model.sNguoiLap" maxlength="50" autocomplete="off" />
                        </div>
                    </div>

                    <div class="row" id="divTab">
                        <div class="col-sm-12">
                            <table class="table table-bordered" id="tbl_capphatthanhtoankpqp">
                                <thead>
                                    <tr class="text-center">
                                        <th>L</th>
                                        <th>K</th>
                                        <th>M</th>
                                        <th>Tiểu mục</th>
                                        <th>Tiết mục</th>
                                        <th>Ngành</th>
                                        <th>Nội dung/Dự án</th>
                                        <th>Số tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button class="btn btn-default" style="width: 100%" onclick="Huy()"><i class="fa fa-ban" aria-hidden="true"></i><span>Hủy</span></button>
                        @if (ViewBag.bIsViewDetail == 0)
                        {
                            <button class="btn btn-primary" id="btnLuu" style="width: 100%" onclick="Luu()"><i class="fa fa-download" aria-hidden="true"></i><span>Lưu</span></button>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/QLVonDauTu/QuyetToan/jsVDT_SuaThongTriQuyetToan.js" type="text/javascript"></script>
<script src="/Scripts/sheet/jsNumber.js" type="text/javascript"></script>
