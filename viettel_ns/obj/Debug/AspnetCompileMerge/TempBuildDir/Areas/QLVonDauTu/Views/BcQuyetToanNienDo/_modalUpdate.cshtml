@using Viettel.Models.QLVonDauTu
@model VdtQtBcQuyetToanNienDoViewModel

<div class="modal-body">
    <input type="hidden" id="hidQTNienDoID" value="@Model.iID_BCQuyetToanNienDoID" />
    <input type="hidden" id="IDTongHop" value="@Model.sTongHop" />
  
    <div class="form-group row">
        <div class="col-sm-4">
            <label for="">Số đề nghị</label>
            @Helpers.Required()
            <div>
                <input type="text" required id="txtSoDeNghi" class="form-control" value="@Html.Raw(Model.sSoDeNghi)" maxlength="100" autocomplete="off" />
            </div>
        </div>
        <div class="col-sm-4">
            <label for="txtNgayDeNghi">Ngày đề nghị</label>
            @Helpers.Required()
            <div class='input-group date'>
                <input type='text' class="form-control" value="@(Model.dNgayDeNghi.HasValue ? Model.dNgayDeNghi.Value.ToString("dd/MM/yyyy") : string.Empty)" id="txtNgayDeNghi" maxlength="100" autocomplete="off" />
                <span class="btn-default input-group-addon">
                    <i class="fa fa-calendar" aria-hidden="true"></i>
                </span>
            </div>
        </div>
        <div class="col-sm-4">
            <label for="txtNamKeHoach">Năm kế hoạch</label>
            <input type='text' class="form-control" value="@Html.Raw(Model.iNamKeHoach)" id="" autocomplete="off" disabled />
        </div>
    </div>
 
</div>
<div class="modal-footer">
    <div class="text-center">
        <button class="btn btn-default" id="btnHuyModal" data-dismiss="modal"><i class="fa fa-ban" aria-hidden="true"></i><span>Hủy</span></button>
        <button class="btn btn-primary" onclick="SaveQTNDTongHop(@Model.iNamKeHoach)" id="btnLuuModal"><i class="fa fa-download" aria-hidden="true"></i><span>Lưu</span></button>
    </div>
</div>
<script src="~/Scripts/QLNH/QuyetToan/jsUpdateQuyetToanNienDo.js"></script>
<script >
    $(".date").datepicker({
        todayBtn: "linked",
        language: "vi",
        autoclose: true,
        todayHighlight: true,
        format: 'dd/mm/yyyy'
    });
</script>
